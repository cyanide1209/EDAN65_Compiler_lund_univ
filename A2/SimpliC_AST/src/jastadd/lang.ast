Program ::= Function*;

Function ::= FunctionID [Expression];
FunctionID ::= <ID>;

abstract Expression;
Binding:Expression ::= IdUse Term;
Declaration:Expression ::= IdDecl [Term];
IdUse : Term ::= <ID>;
IdDecl ::= <ID>;

abstract Term;
Sum:Term ::= left:Term right:Term;
Sub:Term ::= left:Term right:Term;

abstract lowprio:Term;
Mul:lowprio ::= left:Term right:Term;
Div:lowprio ::= left:Term right:Term;
Mod:lowprio ::= left:Term right:Term;

Nbr : Term ::= <NUM>;


