Program ::= Function*;

Function ::= name:FunctionID code:CodeBlock;
CodeBlock ::= [Expression];
FunctionID ::= <ID>;

abstract Expression;
Binding:Expression ::= name:IdUse variable:Term;
Declaration:Expression ::= name:IdDecl;
IdDecl ::= <ID>;


abstract Term;
Sum:Term ::= left:Term right:Term;


Nbr : Term ::= <NUM>;
IdUse : Term ::= <ID>;